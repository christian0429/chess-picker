{
  "name": "react-glider",
  "version": "0.0.0",
  "description": "A react wrapper for glider.js",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "author": {
    "name": "Andrew Lisowski",
    "email": "lisowski54@gmail.com"
  },
  "files": [
    "dist",
    "glider.defaults.css"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/hipstersmoothie/react-glider"
  },
  "scripts": {
    "lint": "tslint -p . --format stylish",
    "build": "tsc",
    "storybook": "start-storybook -p 9001 -c .storybook",
    "deploy-storybook": "storybook-to-ghpages",
    "prerelease": "npm run build",
    "release": "github-semantic-version --bump --changelog --push --publish"
  },
  "devDependencies": {
    "@babel/core": "^7.1.6",
    "@storybook/addon-actions": "^4.0.6",
    "@storybook/addon-knobs": "^4.0.6",
    "@storybook/addon-notes": "^4.0.8",
    "@storybook/addon-storysource": "^4.0.6",
    "@storybook/react": "^4.0.6",
    "@storybook/storybook-deployer": "^2.3.0",
    "@types/jest": "^23.3.9",
    "@types/storybook__addon-actions": "^3.4.1",
    "@types/storybook__addon-knobs": "^3.4.1",
    "@types/storybook__addon-notes": "^3.3.3",
    "@types/storybook__react": "^4.0.0",
    "awesome-typescript-loader": "^5.2.1",
    "babel-core": "^6.26.3",
    "babel-loader": "^8.0.4",
    "github-semantic-version": "^7.6.0",
    "husky": "^1.1.4",
    "jest": "^23.6.0",
    "lint-staged": "^8.0.4",
    "prettier": "^1.15.2",
    "react": "^16.6.3",
    "react-docgen-typescript-webpack-plugin": "^1.1.0",
    "react-dom": "^16.6.3",
    "ts-jest": "^23.10.4",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.16.0",
    "tslint-xo": "^0.10.0",
    "typescript": "^3.1.6",
    "typescript-tslint-plugin": "^0.0.6",
    "webpack": "^4.25.1"
  },
  "prettier": {
    "singleQuote": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "collectCoverage": true,
    "coverageDirectory": "./coverage",
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "html"
    ],
    "collectCoverageFrom": [
      "**/*.{js,jsx}",
      "!**/node_modules/**",
      "!**/vendor/**",
      "!**/*.d.ts",
      "**/*.{ts,tsx}"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/*.test.+(ts|tsx|js)"
    ],
    "globals": {
      "test-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ]
  },
  "dependencies": {
    "@types/react": "^16.7.6",
    "glider-js": "^1.6.0"
  },
  "storybook-deployer": {
    "gitUsername": "hipstersmoothie",
    "gitEmail": "lisowski54@gmail.com",
    "commitMessage": "Deploy Storybook [skip ci]"
  },
  "gsv": {
    "majorLabel": "Version: Major",
    "minorLabel": "Version: Minor",
    "patchLabel": "Version: Patch",
    "internalLabel": "No version: Internal"
  }
}
